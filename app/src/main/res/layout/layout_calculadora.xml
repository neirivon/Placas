<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="10dp"
    android:layout_gravity="center"
    android:background="@android:color/black"
    android:useDefaultMargins="true"
    android:rowOrderPreserved="false"
    android:nestedScrollingEnabled="true"
    android:columnCount="4"
    android:rowCount="7"
    android:alignmentMode="alignBounds">


    <EditText

        android:inputType="number"
        android:ems="10"
        android:id="@+id/textNumero"
        android:background="#ffffff"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="3"
        android:digits="0123456789"
         android:text="0000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="gravity"
        android:gravity="center|right"
        android:maxLength="9" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="/"

        android:layout_row="0"
        android:layout_column="3"
        android:onClick="recebeNumero"
        android:id="@+id/btDividir"
        android:backgroundTint="#353535"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="1"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="recebeNumero"
        android:id="@+id/b10"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="2"

        android:id="@+id/b11"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="3"

        android:id="@+id/b12"
        android:layout_row="1"
        android:layout_column="2"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="*"

        android:layout_row="1"
        android:layout_column="3"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/btMultiplicar" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="4"
        android:id="@+id/b20"
        android:layout_row="2"
        android:layout_column="0"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="5"

        android:id="@+id/b21"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="6"

        android:id="@+id/b22"
        android:layout_row="2"
        android:layout_column="2"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="-"

        android:id="@+id/btSubtrair"
        android:layout_row="2"
        android:layout_column="3"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="7"

        android:id="@+id/b30"
        android:layout_row="3"
        android:layout_column="0"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="8"

        android:id="@+id/b31"
        android:layout_row="3"
        android:layout_column="1"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="9"

        android:id="@+id/b32"
        android:layout_row="3"
        android:layout_column="2"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal|top|bottom"
        android:gravity="center"
        android:text="+"

        android:id="@+id/btSomar"
        android:layout_row="3"
        android:layout_column="3"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:layout_rowSpan="3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_rowWeight="1" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="0"

        android:id="@+id/b40"
        android:layout_row="4"
        android:layout_column="0"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:layout_columnSpan="2"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="00"

        android:id="@+id/b42"
        android:layout_row="4"
        android:layout_column="2"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="="

        android:id="@+id/b50"
        android:layout_row="5"
        android:layout_column="0"
        android:onClick="recebeNumero"
        android:backgroundTint="#353535"
        android:layout_columnSpan="3"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="C"

        android:id="@+id/btReiniciar"
        android:layout_row="6"
        android:layout_column="0"
        android:onClick="reiniciar"
        android:backgroundTint="#353535"
        android:layout_columnSpan="2"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:onClick="recebeNumero"

        android:id="@+id/btVoltar"
        android:layout_row="6"
        android:layout_column="2"
        android:backgroundTint="#353535"
        android:layout_columnSpan="2"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="&lt;&lt;&lt;--" />
</GridLayout>
